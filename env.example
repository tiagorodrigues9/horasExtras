# Configurações do Banco de Dados MongoDB Atlas
MONGO_USER=seu_usuario_mongodb
MONGO_PASS=sua_senha_mongodb
MONGO_DB=nome_do_banco

# Chave secreta para JWT (IMPORTANTE: Use uma chave forte e única)
JWT_SECRET=sua_chave_secreta_super_forte_aqui_123456789

# Porta do servidor (Render define automaticamente)
PORT=3000

# Ambiente (production para Render)
NODE_ENV=production

# URL da API (para produção, use a URL completa do Render)
# Exemplo: https://horasextras.onrender.com
REACT_APP_API_URL=

# URL do Frontend (para CORS em produção)
# Exemplo: https://horasextras.onrender.com
FRONTEND_URL=
